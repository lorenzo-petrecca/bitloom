root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Impostazioni di indentazione
indent_style = space
indent_size = 2

# Per file particolari puoi sovrascrivere:
[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
